@import "main.styl"

@keyframes glowing
	0% {
		box-shadow inset 0 0 5px rgba(255, 165, 0, 0.61)
	}
	50% {
		box-shadow inset 0 0 20px rgba(255, 224, 39, 0.81)
	}
	100% {
		box-shadow inset 0 0 5px rgba(255, 165, 0, 0.61)
	}

.user_trades
	display inline-block
	border 1px solid borders-color
	position absolute
	right 0
	top 0
	bottom 0
	overflow-y scroll
	background white

	&__list
		list-style none
		padding 0
		margin 0

		&-item
			padding 6px 8px

			&.buy
				background-image linear-gradient(to bottom, rgba(255,255,255,0.5), rgba(255, 3, 3, 0) 25%,  rgba(255, 3, 3, 0) 75%, rgba(255,255,255,0.5)),
					linear-gradient(to right, rgba(255, 3, 3, 0.14), rgba(255,3,3,0) 25%)
				border-left 4px solid rgba(255, 3, 3, 0.75)

			&.sell
				background-image linear-gradient(to bottom, rgba(255,255,255,0.5), rgba(255, 3, 3, 0) 25%,  rgba(255, 3, 3, 0) 75%, rgba(255,255,255,0.5)),
					linear-gradient(to right, rgba(58, 255, 3, 0.14), rgba(52,181,16,0) 25%)
				border-left 4px solid rgba(67, 218, 25, 0.75)

			&.new
				animation glowing 1000ms infinite

	&__title
		titleEl()